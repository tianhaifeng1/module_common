<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.me.UpdatePwdActivity">

    <include layout="@layout/ttitle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:background="@color/color_white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="@dimen/dp90"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="原密码:"
            android:textColor="#333333"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/pwd_old"
            android:textSize="@dimen/sp14"
            android:hint="请输入原密码"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:background="@color/color_white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="@dimen/dp90"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="新密码:"
            android:textColor="#333333"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/pwd_new"
            android:textSize="@dimen/sp14"
            android:hint="请输入新密码"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:background="@color/color_white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="@dimen/dp90"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="确认密码:"
            android:textColor="#333333"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/pwd_queren"
            android:textSize="@dimen/sp14"
            android:hint="请输入确认密码"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <TextView
        android:id="@+id/login_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:layout_marginLeft="@dimen/dp27"
        android:layout_marginTop="@dimen/dp40"
        android:layout_marginRight="@dimen/dp27"
        android:background="@drawable/r_checked_8"
        android:gravity="center"
        android:text="立即修改"
        android:textColor="#ffffff"
        android:textSize="18sp" />

</LinearLayout>