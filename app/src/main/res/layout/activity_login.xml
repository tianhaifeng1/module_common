<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_white"
    tools:context=".activity.LoginActivity">

    <LinearLayout
        android:layout_marginTop="@dimen/dp100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/login_type1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp36"
                android:layout_marginTop="@dimen/dp40"
                android:text="企业"
                android:textColor="@color/tab_checked"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/login_type2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp36"
                android:layout_marginTop="@dimen/dp40"
                android:text="访客"
                android:textColor="@color/color_name"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp36"
                android:layout_marginTop="@dimen/dp40"
                android:text="请登录"
                android:textColor="@color/color_name"
                android:textSize="18sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/login_edit_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp44"
            android:layout_marginLeft="@dimen/dp27"
            android:layout_marginTop="@dimen/dp20"
            android:layout_marginRight="@dimen/dp27"
            android:background="@drawable/r_grey_f3f4fa"
            android:hint="请输入账号"
            android:maxLength="15"
            android:paddingLeft="@dimen/dp30"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp44"
            android:layout_marginLeft="@dimen/dp27"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginRight="@dimen/dp27"
            android:background="@drawable/r_grey_f3f4fa"
            android:gravity="center">

            <EditText
                android:id="@+id/login_edit_pwd"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp44"
                android:layout_weight="1"
                android:background="@drawable/r_grey_f3f4fa"
                android:hint="请输入密码"
                android:maxLength="15"
                android:paddingLeft="@dimen/dp30"
                android:textSize="14sp" />

            <TextView
                android:visibility="gone"
                android:id="@+id/login_yzm"
                android:layout_width="@dimen/dp80"
                android:layout_height="@dimen/dp30"
                android:layout_marginRight="@dimen/dp9"
                android:background="@drawable/submit_btn"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="#ffffff"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/login_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:layout_marginLeft="@dimen/dp27"
            android:layout_marginTop="@dimen/dp40"
            android:layout_marginRight="@dimen/dp27"
            android:background="@drawable/r_checked_8"
            android:gravity="center"
            android:text="立即登录"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/login_type_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginRight="@dimen/dp25"
            android:padding="@dimen/dp5"
            android:text="没有账号去注册"
            android:textColor="#1a3cf1" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_marginBottom="@dimen/dp40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="登录即代表您已同意"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp12" />
        <TextView
            android:text="《用户协议》"
            android:textColor="@color/tab_checked"
            android:id="@+id/login_content1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp12" />
        <TextView
            android:text="及"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp12" />
        <TextView
            android:text="《隐私政策》"
            android:textColor="@color/tab_checked"
            android:id="@+id/login_content2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp12" />

    </LinearLayout>

</LinearLayout>